{{> mainMenuSuperAdmin _id="user settings" }}
<section class="ui raised segment">
    <div class="ui grid">

        <article class="eight wide column">
            <table class="ui celled table segment">
                <thead>
                <tr><th>Delete</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Authorisation level</th>
                    <th>ObjectId</th>
                    <th>Upgrade to admin</th>
                    <th>Downgrade to user</th>
                </tr>
                </thead>
                <tbody>
                {{#each users}}
                    <tr>
                        <td><a href="/userSettings/deleteUser/{{this._id}}" class="ui icon button">
                            <i class="icon trash"></i></a></td>
                        <td> {{this.firstName}}</td>
                        <td> {{this.lastName}} </td>
                        <td> {{this.email}} </td>
                        <td> {{this.level}} </td>
                        <td>{{this._id}}</td>
                        <td><a href="/userSettings/updateUserToAdmin/{{this._id}}" class="ui icon button">
                            <i class="arrow up icon"></i></a> </td>
                        <td><a href="/userSettings/updateAdminToUser/{{this._id}}" class="ui icon button">
                            <i class="arrow down icon"></i></a> </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
            {{>error}}
        </article>
    </div>
</section>